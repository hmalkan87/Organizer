@model IEnumerable<Organizer.Entity.Events>
@using Organizer.Entity
@using Organizer.BLL
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tüm Etkinlikler</h2>

<p>
    @Html.ActionLink("+ Yeni Etkinlik", "CreateEvent")
</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            Etkinlik Adı
        </th>
        <th>
            Oluşturan Kişi
        </th>
        <th>
            Kontenjan
        </th>
        <th>
            Etkinlik Tarihi
        </th>
        @*<th>
                Kategori
            </th>*@
        <th>
            Başvuru Tarihi
        </th>
        <th>
            Açıklama
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.CategoryID)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.ActionLink("Düzenle", "Edit", new { id=item.ID }) |*@
                @Html.ActionLink("Detaylar", "Details", new { id = item.ID })

                @{
                    EventBLL eventBLL = new EventBLL();
                    Users user = Session["User"] as Users;
                    List<UserEvent> uel = eventBLL.GetIJoined(user.ID);


                    foreach (UserEvent ue in uel)
                    {
                        if (ue.EventID != item.ID)
                        {
                            @Html.ActionLink("Katıl", "JoinEvent", new { id = item.ID });

                        }
                        //TODO iki defa Katıl linki koyuyor, düzelt. Databasedeki veri sayısına göre değişebilir kaç defa yazdığı.

                    }
                }

            </td>
        </tr>
    }

</table>
