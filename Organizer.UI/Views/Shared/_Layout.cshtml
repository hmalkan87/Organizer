@using Organizer.Entity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Organizer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{ 
        Users user = Session["User"] as Users;
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["User"] != null)
                {
                    @Html.ActionLink("OlaylarOlaylar", "Index", "Event", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("OlaylarOlaylar", "Index", "Login", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    @if (Session["User"] != null)
                    {
                        <li>@Html.ActionLink("🎪Tüm Etkinlikler", "Index", "Event")</li>
                        <li>@Html.ActionLink("📅Oluşturduklarım", "MyEvents", "Event")</li>
                        <li>@Html.ActionLink("🗓️Katıldıklarım", "Ijoined", "Event")</li>
                        <li>@Html.ActionLink("✉Mesajlarım", "MyMessages", "Message")</li>
                        <li>@Html.ActionLink("⚙" + user.Name,"UpdateUser","User")</li>//TODO Profil bilgileri güncelleme ve hesabı silme ekranı geldin tıklayınca
                        <li>@Html.ActionLink("🚪Çıkış", "Logout", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Giriş Yap", "Index", "Login")</li>
                        <li>@Html.ActionLink("Kayıt Ol", "CreateUser", "User")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer class="navbar-fixed-bottom">
            <hr />
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
